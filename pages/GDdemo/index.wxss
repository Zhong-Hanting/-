/* pages/GDdemo/index.wxss */
.current{
  color: blue;
}
.container{
  width:100%;
  height:  100%;
}
.head{
  font-size: 12px;
  position: absolute;
  width: 100%;
  height: 3rem;
  top:0;
  left:0;
  z-index: 5;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: space-between;
}
.search-type{
  display: flex;
  justify-content: space-between;
}

.search-box{
  height: 28px;
  padding: 0 5px;
  font-size: 0;
  border: 1px solid #ccc;
  border-radius: 10px;
  display: inline-block;
  justify-content: space-around;
  align-content:center;
}
.search-box input{
  box-sizing: border-box;
  display: inline-block;
  width: 80%;
  height: 28px;
  font-size: 12px;
  vertical-align: top;
}
.search-box .van-icon{
  box-sizing: border-box;
  display: inline-block;
  font-size: 28px;
  height: 28px;
  width: 28px;
  vertical-align: middle;
}