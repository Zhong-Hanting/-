/* pages/TXmap/index.wxss */
#myMap{
  width: 100%;
  height: 100%;
}
/* 右上角悬浮 */ 
.right-box{
  font-size: 12px;
  width: 3rem;
  background: #fff;
  height: 12rem;
  position: absolute;
  top:1rem;
  right:0;
  margin-right: 1rem;
  border-radius:10px ;
}
.right-box li{
  display: block;
  text-align: center;
  margin: 5px 0;
}
.right-box van-icon{
  font-size: 20px;
  display: block;
  width: 100%;
}
.right-box li text{
  font-size: 12px;
  border-bottom: 1px solid #c1c1c1;
}
.right-box li:last-child text{
  border: none;
} 
/* 整体悬浮卡片 */
.card{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  display: none;
}
.card-head{
  height: 4rem;
  opacity: 0.3;
  background: #fff;
}
.card-body{
  height: calc(100% - 4rem);
  background: #fff;
  position: relative;
  padding: 0 3%;
}
.card-body-search{
  background: #fff;
  height: 2rem;
  width: 94%;
  /* border: 1px solid #000; */
  border-radius: 5px;
  position: absolute;
  top: -1.5rem;
  display: flex;
  align-content:center ;
  justify-content: space-around;
  box-shadow: 0 5px 5px #c1c1c1;
}
.card-body-search input{
  width: 70%;
  box-sizing: border-box;
  height: 100%;
  vertical-align: top;
}
.card-body-search van-icon{
  box-sizing: border-box;
  font-size: 20px;
  height: 100%;
  width: 20px;
  vertical-align: middle;
}
.card-body-list{
  margin-top: 0.5rem;
  font-size: 12px;
  width: 100%;
  height: 10rem;
  position: relative;
  top: 1.2rem;
  left: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.card-body-list li{
  text-align: center;
  width: 17%;
  height: 4.5rem;
}
.card-body-list li image{
  width: 3rem;
  height: 3rem;
}
.card-body-list li text{
  display: block;
}
.card-address{
  position: relative;
  height: 10rem;
  box-shadow:0px 5px  10px #ccc ;
  margin-top: 2rem;
  padding: 1rem;
  border-radius: 10px;
}
.card-address-head{
  display: flex;
  justify-content: space-between;
  font-weight: 800;
}
.card-address-body{
  margin-top: 0.5rem;
  display: flex;
  flex-wrap: wrap;
}
.card-address-body-li{
  width: 50%;
  margin-top: 1rem;
}
.card-advertising{
  position: relative;
  height: 7rem;
  border-radius: 10px;
  margin-top: 1rem;
  box-shadow:0px 5px  10px #ccc;
}
.card-advertising image{
  width: 100%;
  height: 100%;
}


