<!--pages/TXmap/index.wxml-->
<map id="myMap"
  bindtap="clcickMap"   
   style="width:100%;height:100%;"
   longitude="{{centerPie.lng}}"
   latitude="{{centerPie.lat}}" scale='16'>
</map>
<ul class="right-box">
    <li> 
      <van-icon name="chat-o" badge="9" />
      <text>消息</text>
      </li>
    <li>
      <van-icon name="coupon-o" />
      <text>图层</text>
    </li>
    <li>
      <van-icon name="question-o" />
      <text>反馈</text>
    </li>
    <li>
      <van-icon name="setting-o" />
      <text>控件</text>
    </li>
</ul>
<view class="card">
    <view class="card-head"></view>
    <view class="card-body">  
      <view class="card-body-search">
        <van-icon name="search" />  
        <input type="text"/>
        <van-icon name="scan" />
        <van-icon name="service-o" />
      </view>
      <ul class='card-body-list'>
        <li wx:for="{{iconPathList}}" wx:key="index">
          <image  src="{{item.path}}"></image>
          <text>{{item.label}}</text>
        </li>
      </ul>
      <view class="card-address">
          <view class="card-address-head">
            <text>常去地点</text>
            <text>设置 ></text>
          </view>

          <ul class='card-address-body'>
              <li class="card-address-body-li">
                <van-icon name="location-o" />
                <span>交大花园</span>
              </li>
              <li class="card-address-body-li">
                <van-icon name="location-o" />
                <span>成都东站</span>
                </li>
              <li class="card-address-body-li">
                <van-icon name="location-o" />
                <span>滨江和城</span>
              </li>
              <li class="card-address-body-li">
                <van-icon name="location-o" />
                <span>天府广场</span>
              </li>
          </ul>
      </view>
      <view class="card-advertising">
        <image src="../image/guanggao.png" alt=""/>
      </view>
    </view>
</view>
